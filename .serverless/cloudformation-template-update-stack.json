{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "The AWS CloudFormation template for this Serverless application",
  "Resources": {
    "ServerlessDeploymentBucket": {
      "Type": "AWS::S3::Bucket"
    },
    "ResizeLambdaFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Code": {
          "S3Bucket": {
            "Ref": "ServerlessDeploymentBucket"
          },
          "S3Key": "serverless/glrGenerateThumbnails/dev/1480300501035-2016-11-28T02:35:01.035Z/glrGenerateThumbnails.zip"
        },
        "FunctionName": "glrGenerateThumbnails-dev-resize",
        "Handler": "handler.resize",
        "MemorySize": 1024,
        "Role": "arn:aws:iam::543745842878:role/lambda_basic_execution",
        "Runtime": "nodejs4.3",
        "Timeout": 6
      }
    },
    "S3BucketLiberomediav": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": "libero-media-v",
        "NotificationConfiguration": {
          "LambdaConfigurations": [
            {
              "Event": "s3:ObjectCreated:*",
              "Function": {
                "Fn::GetAtt": [
                  "ResizeLambdaFunction",
                  "Arn"
                ]
              },
              "Filter": {
                "S3Key": {
                  "Rules": [
                    {
                      "Name": "prefix",
                      "Value": "libero/"
                    },
                    {
                      "Name": "suffix",
                      "Value": ".jpg"
                    }
                  ]
                }
              }
            }
          ]
        }
      }
    },
    "ResizeLambdaPermissionS3": {
      "Type": "AWS::Lambda::Permission",
      "Properties": {
        "FunctionName": {
          "Fn::GetAtt": [
            "ResizeLambdaFunction",
            "Arn"
          ]
        },
        "Action": "lambda:InvokeFunction",
        "Principal": "s3.amazonaws.com"
      }
    }
  },
  "Outputs": {
    "ServerlessDeploymentBucketName": {
      "Value": {
        "Ref": "ServerlessDeploymentBucket"
      }
    },
    "ResizeLambdaFunctionArn": {
      "Description": "Lambda function info",
      "Value": {
        "Fn::GetAtt": [
          "ResizeLambdaFunction",
          "Arn"
        ]
      }
    }
  }
}